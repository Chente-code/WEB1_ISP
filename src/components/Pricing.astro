---

import "../styles/global.css";
const plans = [
  {
    price: "$23",
    speed: "Plan Basico de 80M",
    description: "Ideal para uso individual para el Hogar.",
    image: "../../public/planes/1.jpg",
  },
  {
    price: "$27",
    speed: "Plan intermedio de 120M",
    description: "Ideal para hogares con múltiples dispositivos.",
    image: "../../public/planes/2.jpeg",
  },
  {
    price: "$35",
    speed: "Plan Avanzado de 150M",
    description: "Con alta velocidad de descarga y subida.",
    image: "../../public/planes/3.jpg",
  },
  {
    price: "$55",
    speed: "Plan premium 200M",
    description:
      "Con velocidad ultrarrápida y máximo rendimiento.",
    image: "../../public/planes/4.jpg",
  },
];
---

<section class=" py-12" id="service">
  <div class="animated-gradient"></div>
  <div class="max-w-screen-xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        NUESTROS PLANES
      </h2>
      <p class="mt-4 text-lg leading-6 text-gray-600">
        Elige el plan que mejor se adapte a tus necesidades. Calidad
        garantizada.
      </p>
    </div>
    <div class="flex flex-wrap -mx-6">
      {
        plans.map((plan, index) => (
          <div class="w-full sm:w-1/2 lg:w-1/3 px-6 mb-12 transform transition duration-300 hover:scale-105">
            <div class="bg-gray-100 p-6 rounded-lg shadow-lg">
              <img
                class="w-full h-48 object-cover rounded-t-lg"
                src={plan.image}
                alt={`Plan ${index + 1}`}
              />
              <h3 class="mt-4 text-xl font-semibold text-gray-900">
                {plan.speed}
              </h3>
              <p class="mt-2 text-gray-600">{plan.description}</p>
              <div class="flex mt-4">
                {Array.from({ length: 5 }).map((_, starIndex) => (
                  <svg
                    class="w-5 h-5 text-yellow-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.166 3.59a1 1 0 00.95.69h3.825c.969 0 1.371 1.24.588 1.81l-3.1 2.25a1 1 0 00-.364 1.118l1.167 3.59c.3.921-.755 1.688-1.538 1.118l-3.1-2.25a1 1 0 00-1.175 0l-3.1 2.25c-.782.57-1.838-.197-1.538-1.118l1.167-3.59a1 1 0 00-.364-1.118l-3.1-2.25c-.783-.57-.38-1.81.588-1.81h3.825a1 1 0 00.95-.69l1.166-3.59z" />
                  </svg>
                ))}
              </div>
              <p class="mt-4 text-2xl font-bold text-gray-900">
                {plan.price}/mes +IVA
              </p>
              <a
                href="https://api.whatsapp.com/send?phone=593981097114&text=Hola%20quiero%20contratar%20el%20plan%20${plan.speed}"
                target="_blank"
                rel="noopener noreferrer"
              >
                <button
                  type="button"
                  class="mt-4 w-full text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-4 py-2 text-center"
                >
                  Contratar
                </button>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
